{
  "manifest_version": 2,
  
  "name": "clowder",
  "version": "0.0.1",
  
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "permissions": [
    "unlimitedStorage",
    "system.network",
    "webview"
  ],
  "webview": {
    "partitions": [
      {
        "name": "pageeditor",
        "accessible_resources": [
          "editor/pageeditor.html",
          "editor/ghostdown.css",
          "editor/ghostdown.js",
          "editor/ghostdow.jquery.plugin.html",
          "editor/jquery.ghostdown.js",
          "editor/jquery-1.10.1.min.js",
          "editor/messenger.js"
        ]
      }
    ]
  },
  "sockets": {
    "tcp": {
      "connect": ["*:*"]
    },
    "udp": {"send":["*:*"], "bind":["*:*"], "multicastMembership": ""},
    "tcpServer" : {
      "listen": [":3000"]
    }
  }
}
